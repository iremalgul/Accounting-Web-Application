@model List<DtoLayer.Dtos.CaseDetailDto>

<div class="row">
    <div class="col-12">
        <table id="zero_config"
               class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Kasa</th>
                    <th>Tarih</th>
                    <th>İşlem</th>
                    <th>Miktar</th>
                    <th>Açıklama</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ decimal totalAmount = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Case.Name</td>
                        <td>@item.ProcessDate</td>
                        <td>@(item.InOut == true ? "Giriş" : "Çıkış")</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td> <button type="button" class="btn btn-danger" id="selectedId" data-id="@item.Id" onclick="DeleteClicked(this)">Sil</button></td>

                    </tr>
                    if (item.InOut == true)
                    {
                        totalAmount += item.Amount;
                    }

                    else
                    {
                        totalAmount -= item.Amount;
                    }



                }


            </tbody>
            <div class="col-md-12">
                <div class="pull-right m-t-30 text-end">

                    <h3><b> Toplam :</b> @totalAmount</h3>
                </div>

        </table>
    </div>
</div>
