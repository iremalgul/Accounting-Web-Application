@model  List<DtoLayer.Dtos.FirmDto>



<div class="table-responsive">
    <table id="zero_config"
           class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>İsim</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Firma numarası</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Adress</td>
                    <td>@item.Phone</td>
                    <td>@item.IdentityNumber</td>
                    

                    <td>
                        <a href="@Url.Action("Update", "Firm", new {id=item.Id})" class="btn btn-primary">Güncelle</a>
                        <button type="button" class="btn btn-danger" id="selectedId" data-id="@item.Id" onclick="DeleteClicked(this)">Sil</button>


                    </td>
                </tr>
            }


        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>İsim</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Firma numarası</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>

