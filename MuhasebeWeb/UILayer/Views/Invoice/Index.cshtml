@model List<DtoLayer.Dtos.InvoiceDto>
@{
    ViewBag.Title = "Index";
}


@section css{
    <link rel="stylesheet" href="/Content/libs/datatables.net-bs5/css/dataTables.bootstrap5.min.css">
}

<div class="container-fluid">
    <!-- Row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="border-bottom title-part-padding">
                    <h4 class="card-title mb-0">Faturalar</h4>
                </div>
                <div class="card-body" id="partialStockTable">

                    <div class="table-responsive">
                        <table id="zero_config"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Numara</th>
                                    <th>Fatura Tarihi</th>
                                    <th>Firma</th>
                                    <th>Detay</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Number</td>
                                        <td>@item.InvoiceDate</td>
                                        <td>@item.Firm.Name</td>
                                        <td> <a href=@Url.Action("Detail","Invoice",new {id=item.Id})>Detay</a> </td>
                                        <td>
                                            <a href="@Url.Action("UpdateInvoice", "Invoice", new {id=item.Id})" class="btn btn-primary">GÜncelle</a>
                                            <a href="@Url.Action("DeleteInvoice", "Invoice", new {id=item.Id})" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                           
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
