@model  List<DtoLayer.Dtos.StockDto>



<div class="table-responsive">
    <table id="zero_config"
           class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>İsim</th>
                <th>Alış Fiyatı</th>
                <th>Satış Fiyatı</th>
                <th>KDV</th>
                <th>Resim</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.BuyAmount</td>
                    <td>@item.SellAmount</td>
                    <td>@item.Tax</td>
                    <td>

                        @if (item.PictureUrl != null)
                        {
                            <img src="~/Pictures/@item.PictureUrl" style="height: 150px;width: 150px;" />
                        }
                    </td>


                    <td>
                        <a href="@Url.Action("Update", "Stock", new {id=item.Id})" class="btn btn-primary">GÜncelle</a>
                        <button type="button" class="btn btn-danger" id="selectedId" data-id="@item.Id" onclick="DeleteClicked(this)">Sil</button>
                        
                    </td>
                </tr>
            }


        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>İsim</th>
                <th>Alış Fiyatı</th>
                <th>Satış Fiyatı</th>
                <th>KDV</th>
                <th>Resim</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>
